<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />






    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0307ED</item>
        <item name="android:textColorHint">#3F51B5</item>

    </style>




    <!-- para el  hint de los edittext -->
    <style name="CampoTexto1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#103FEA</item>
        <item name="colorControlActivated">#0B4CF1</item>
        <item name="android:textColorHighlight">#000000</item>
        <item name="android:textColorHint">#020202</item>
        <item name="android:gravity">center</item>

    </style>














</resources>