<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".PaginaFragment"
    android:layout_width="match_parent"

    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/txtPag"
        android:textColor="#070707"
        android:layout_marginStart="12dp"


        ></TextView>

    <EditText
        android:id="@+id/txtUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"

        android:layout_marginTop="15dp"

      android:theme="@style/CampoTexto1"
        android:layout_marginEnd="12dp"></EditText>


    <Button
        android:id="@+id/btnVisualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/btn_style"
android:textColor="#fff"
        android:text="@string/SbtnVisualizar"></Button>

    <WebView
        android:id="@+id/wvPagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
 android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp" />


</LinearLayout>